<UserControl x:Class="Flashcards.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flashcards"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="525">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Culture:" FontWeight="Bold"/>
        <TextBox x:Name="txtCardCulture"/>
        <TextBlock Text="Period:" FontWeight="Bold"/>
        <TextBox x:Name="txtCardPeriod" />
        <TextBlock Text="Title:" FontWeight="Bold"/>
        <TextBox x:Name="txtCardTitle"/>
        <TextBlock Text="Location:" FontWeight="Bold"/>
        <TextBox x:Name="txtCardLocation"/>
        <TextBlock Text="Date:" FontWeight="Bold"/>
        <TextBox x:Name="txtCardDate"/>
        <TextBlock Text="Medium:" FontWeight="Bold"/>
        <TextBox x:Name="txtCardMedium"/>
    </StackPanel>
</UserControl>
